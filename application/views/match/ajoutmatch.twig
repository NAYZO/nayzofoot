{% extends "layout.twig" %}

{% block title %} {{parent()}} - Ajouter Match{% endblock title %}

{% block container%}
    <div class="span12 well"> 
        <form action="/match/ajout" method="post">
        <label> Type</label>
        <select name="type">
            <option value="semi-final">semi-final</option>
            <option value="final">final</option>
        </select>
        <br>
        <label> Saison</label>
        <select name="saison">
         {% for saison in saisons%}
            <option value="{{saison.id}}">{{saison.saison}}</option>            
         {% endfor %}
        </select>
        <br>
        <label> Cat√©gorie</label>
        <select name="categorie">
            <option value="championnat">championnat</option>
            <option value="coupe">coupe</option>
        </select>
        <br>
        <label> Date et temps match</label>
        <input type="datetime" name="date_match">
        <br>
        <label> Stade</label>
        <input type="text" name="stade">
        <br>
         <label> Arbitre</label>
        <select name="arbitre">
         {% for arbitre in arbitres %}
            <option value="{{arbitre.id}}">{{arbitre.nom}}</option>            
         {% endfor %}
        </select>
        <br>
        <select name="equipe_visit">
         {% for equipe in equipes %}
            <option value="{{equipe.id}}">{{equipe.nom_equipe}}</option>            
         {% endfor %}
        </select>
        <br>
         <select name="equipe_recev">
         {% for equipe in equipes %}
            <option value="{{equipe.id}}">{{equipe.nom_equipe}}</option>            
         {% endfor %}
        </select>
        <br>
        <button type="submit" class="btn btn-info">Ajouter</button>
        </form>
    </div>
{% endblock container%}