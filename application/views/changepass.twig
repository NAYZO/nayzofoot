{% extends "layout.twig" %}

{% block title %} {{parent()}} - Changer mot de passe{% endblock title %}

{% block container%}
    <div class="span5 offset3 well">
        <form action='/backend/changepass' method="POST" class="form-horizontal" >
            <fieldset>
                <div id="legend">
                    <legend class="text-center">Changer Mot de passe</legend>
                </div>
                <div class="error">{{ validation_errors() }}</div>
                <div class="control-group">
                    <label class="control-label" for="password">Mot de passe courant</label>
                    <div class="controls">
                        <input type="password" name="password" placeholder="" class="span3" required="required"/>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="password2">Nouveau mot de Passe</label>
                    <div class="controls">
                        <input type="password" name="password2" placeholder="" class="span3" required="required"/>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" for="password3">Confirmer mot de Passe</label>
                    <div class="controls">
                        <input type="password" name="password3" placeholder="" class="span3" required="required"/>
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-info">Enregistrer</button>
                    </div>
                </div>
            </fieldset>
        </form>   
    </div>
{% endblock container%}
