{% extends "layout.twig" %}

{% block title %} {{parent()}} - Gestion des Equipes{% endblock title %}

{% block container%}
    <div class="span11 well"> 
        <h4>Gestion des Equipes </h4>
        <hr>
       <div class="btn-toolbar">
            <a href="/equipe/ajout" class="btn pull-right"><i class="icon-plus-sign"></i> <strong>Ajouter une Equipe</strong></a>
       </div>
        
        <table class="table table-bordered table-hover">
                <tr>
                  <th>Logo</th>
                  <th>Nom</th>
                  <th>Entreneur</th>
                  <th>Ligue Nationale</th>
                  <th>Action</th>
                </tr>
                 {% for equipe in equipes %}
                <tr>
                  <td> <img src="{{base_url()}}uploads/{{equipe.logo}}" alt="" class="img-polaroid span1" style="height: 60px;"></td>
                  <td>{{equipe.nom_equipe}}</td>
                  <td>{{equipe.entreneur}}</td>
                  <td>{{equipe.ligue}}</td>
                  <td>
                      <a href="/equipe/voir/{{equipe.id}}" title="voir" class="btn"><i class="icon-eye-open"></i></a>
                      <a href="/equipe/modifier/{{equipe.id}}" title="Modifier" class="btn"><i class="icon-edit"></i></a> 
                      <a href="/equipe/supprimer/{{equipe.id}}" title="Supprimer" class="btn deleteadmin"><i class="icon-trash"></i></a>
                  </td>
                </tr>
         
              {% endfor %}
            </table>
{% endblock container%}





